{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unversioned-import"]
    }
  },
  "fmt": {
    "exclude": ["CHANGELOG.md"]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-ffi --allow-sys --allow-read --allow-net --allow-env --env-file --watch src/server.ts",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts",
    "start": "deno run --allow-read --allow-net --allow-env --allow-sys --allow-ffi src/server.ts",
    "prisma": "deno run --allow-all npm:prisma",
    "install": "deno task prisma migrate deploy && deno task prisma generate && deno install --entrypoint src/server.ts --allow-scripts && deno task hook install"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "generated/": "./prisma/generated/"
  }
}
